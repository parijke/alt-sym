<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-3">
            <h5 class="text-uppercase">Brauchen Sie Hilfe</h5>
            <div class="list-group">
                {% if systemoption.supportPhoneNumber %}
                <div class="list-group-space">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <small class="mb-1">Rufen Sie uns an</small>
                        </div>
                        <h6 class="mb-1">{{ systemoption.supportPhoneNumber }}</h6>
                    </a>
                </div>
                {% endif %}
                {% if systemoption.supportEmailAddress %}
                <div class="list-group-space">
                    <a href="mailto:info@altmuehlsee.com" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <small class="mb-1">Schreiben Sie uns</small>
                        </div>
                        <h6 class="mb-1"> {{ systemoption.supportEmailAddress }}</h6>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            <h5 class="text-uppercase">Inhalt</h5>
            <ul class="list-unstyled">
                <li>
                    <a href="{{ path('hostel_view') }}" class="text-muted">Gastgeber</a>
                </li>
                <li>
                    <a href="{{ path('static_site_region') }}" class="text-muted">Region</a>
                </li>
                <li>
                    <a href="{{ path('event') }}" class="text-muted">Veranstaltungen</a>
                </li>
                <li>
                    <a href="{{ path('leisure') }}" class="text-muted">Freizeitangebote</a>
                </li>
            </ul>
        </div>
        <div class="col-md-3">
            <h5 class="text-uppercase">Information</h5>
            <ul class="list-unstyled">
                <li><a href="{{ path('static_site_imprint') }}" class="text-muted">Impressum</a></li>
                <li><a href="{{ path('static_site_privacy') }}" class="text-muted">Datenschutzerklärung</a></li>
                <li><a href="{{ path('static_site_contact') }}" class="text-muted">Kontakt</a></li>
                <li><a href="{{ path('static_site_cookies') }}" class="text-muted">Verwendung von Cookies</a></li>
            </ul>
        </div>
        <div class="col-md-3" id="footer-member">
            <h5 class="text-uppercase">Mitglieder</h5>
            <ul class="list-unstyled">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {# if authenticated create the link for the right admin dashboard #}
                    <li>
                        <a href="{{ path('app_logout') }}" class="text-muted">Logout</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('admin') }}" class="font-weight-bold text-danger">Admin</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('user') }}" class="font-weight-bold text-danger">Admin</a>
                        </li>
                    {% endif %}
                {% else %}
                    <li>
                        <a href="{{ path('static_site_entry') }}">Mitglied werden <span
                                    class="badge badge-pill badge-success">FREI</span></a>
                    </li>
                    <li>
                        <a href="{{ path('static_site_entry') }}" class="text-muted">Unterkunft eintragen <span
                                    class="badge badge-pill badge-success">FREI</span></a>
                    </li>
                    <li>
                        <a href="{{ path('static_site_entry') }}" class="text-muted">Werbung schalten</a>
                    </li>
                    <li>
                        <a href="{{ path('static_site_event_entry') }}" class="text-muted">Event eintragen <span
                                    class="badge badge-pill badge-primary">FREI</span></a>
                    </li>
                    <li>
                        <a href="{{ path('app_login') }}" class="text-muted">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>

