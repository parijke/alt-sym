{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}


{% block page_content %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <script>
        var myChart = new Chart(ctx, {...});
    </script>
<style>

    .h3, h5 {
        font-weight: 100;
        color: var(--text-blue-600)
    }


    .card {
        background-color: #fff;
        box-shadow: 0 9px 23px rgba(0, 0, 0, 0.09), 0 5px 5px rgba(0, 0, 0, 0.06) !important;
        border: none;
    }

    .card-header {
        background-color: #fff;
    }

    .card-header h5 {
        display: inline-block;
    }

    #admin-massages-card .card-body {
        padding: 0;
        color: var(--gray-600);
        font-size: 0.8rem;
    }

    .list-group {
        border-radius: 0;
    }

    .list-group h5 {
        font-size: 1rem;
        font-family: var(--font-family-base);
        color: var(--gray-600);
        font-weight: bold;
    }

    .list-group-item {
        border-right: 0;
        border-left: 0;
        border-radius: 0;
        padding-top: 1rem;
        border-top-width: 1px !important;
    }
</style>

<!-- Admin Dashboard Main Container -->
<h1 class="h3 mb-4 border-bottom pb-2">Statistiken</h1>
<div class="row mb-4">

    {% for statistic in admin_notice_hostel_statistic %}
    <div class="col-md-3 mb-5">
        <!-- Admin Massage Card -->
        <div class="card" id="admin-massages-card">
            <!-- Card Header -->
            <div class="card-header">
                <h5>{{ statistic.hostel.hostelName|striptags|slice(0, 20) ~ '...' }}</h5>
                <span class="badge badge-pill badge-secondary float-right">{{ statistic.statistic.date|date('d.m.Y') }}</span>
            </div>
            <!-- Card Body -->
            <div class="card-body">

            </div>
            <!-- Card Body #END -->
            <div class="card-footer {% if statistic.statistic.pageView is not empty and statistic.statistic.pageView > 40 %}bg-danger{% else %}bg-primary{% endif %} text-white">
                <div class="row text-center">
                    <div class="col">
                        <h4 class="m-0 text-white">{% if statistic.statistic.globalPageView is empty %}0{% else %}{{ statistic.statistic.globalPageView }}{% endif %}</h4>
                        <span>Global</span>
                    </div>
                    <div class="col">
                        <h4 class="m-0 text-white">{% if statistic.statistic.noticeHostel is empty %}0{% else %}{{ statistic.statistic.noticeHostel }}{% endif %}</h4>
                        <span>Gemerkt</span>
                    </div>
                    <div class="col">
                        <h4 class="m-0 text-white">{% if statistic.statistic.pageView is empty %}0{% else %}{{ statistic.statistic.pageView }}{% endif %}</h4>
                        <span>Page</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

</div>

{% endblock %}