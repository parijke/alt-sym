{% block body %}
    <!-- Event Overview Container -->
    <div class="container">
        <!-- Heading -->
        <h1 class="text-center text-uppercase">Veranstaltung</h1>
        {% for event in events %}
            <div class="row mb-4">
                <div class="col-md-1 mr-2">
                    <!-- Event Date -->
                    <div class="event-date-cycle border-color-{{ cycle(['yellow', 'green','red','purple'], loop.index0) }}">
                        {{ event.event_start_date|date('d.m H:i') }} UHR
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Event Card -->
                    <div class="card border-color-{{ cycle(['yellow', 'green','red','purple'], loop.index0) }} shadow-sm">
                        <!-- Info Header -->
                        <div class="card-header">
                            <!-- Image -->
                            <img src="https://upload.wikimedia.org/wikipedia/commons/a/ad/Placeholder_no_text.svg"
                                 alt="" class="rounded-circle float-left" width="45">
                            <h5 class="mb-1"> {{ event.title }}</h5>
                            <!-- Date -->
                            <p><i class="fa fa-map-marker-alt"></i> {{ event.address }}
                                den {{ event.event_start_date|date('d.m.Y') }}</p>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <!-- Event Description -->
                            <p> {{ event.short_description }}</p>
                            <a href="{{ path('event_details',{'id':event.id}) }}"
                               class="btn btn-{{ cycle(['yellow', 'green','red','purple'], loop.index0) }}">Details</a>

                            <a href="{{ path('event_details_ical',{'id':event.id}) }}"
                               class="btn btn-{{ cycle(['yellow', 'green','red','purple'], loop.index0) }}">iCalendar</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
