<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {# todo IMPORTENT remove in production no index #}
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="{% block description %}{{ systemoption.webSiteName }}{% endblock %}">
    <title>{% block title %}{{ systemoption.webSiteName }}{% endblock %}</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Oswald|Roboto+Condensed:300&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/ico">

    <!-- Dynamic Style -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
        {{ encore_entry_link_tags('irs') }}{# ironslider #}
    {% endblock %}
</head>
<body id="body">
<div class="container-fluid">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% if is_granted('ROLE_ADMIN') %}
            <!-- Admin Tool Bar -->
            <div class="bg-light p-1" id="header-banner">
                <div class="row">
                    <div class="col-md-6">
                        <div class="text-left pl-2 text-primary">
                            <i class="fa fa-tachometer-alt"></i>
                            <a href="{{ path('admin') }}">Dashboard</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Admin Edit Hostel -->
                        {% if app.request.get('_route') == 'hostel_details' %}
                            {% set entiy_id = app.request.get('id') %}
                            {% set url = ea_url()
                                .setDashboard('App\\Controller\\Admin\\AdminDashboardController')
                                .setController('App\\Controller\\Admin\\AdminHostelCrudController')
                                .setAction('edit')
                                .setEntityId(entiy_id) %}
                            <div class="text-right pr-2 text-warning">
                                <i class="fas fa-edit"></i>
                                <a href="{{ url }}">Eintrag bearbeiten</a>
                            </div>
                        {% endif %}
                        <!-- Admin Edit Hostel #END -->
                    </div>
                </div>
            </div>
            <!-- Admin Tool Bar #END -->

        {% endif %}
    {% else %}
        <!-- Top Header Banner -->
        <div class="bg-dark p-1" id="header-banner">
            <div class="row">
                {% if systemoption.supportEmailAddress %}
                    <div class="col-md-6">
                        <div class="text-left text-white pl-2 d-none d-md-block">
                            <i class="fas fa-envelope"></i>
                            {{ systemoption.supportEmailAddress }}
                        </div>
                    </div>
                {% endif %}
                {% if systemoption.outgoingPortalLink %}
                    <div class="col-md-6">
                        <div class="text-right text-white pr-2">
                            {{ systemoption.outgoingPortalLink|raw }}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <!-- Top Header Banner #END -->
    {% endif %}

    <!-- Navigation -->
    <header class="header">
        {% include('navigation.html.twig') %}
    </header>
    <!-- Navigation #END -->

    <!-- Main Content -->
    <main id="main" class="{% if app.request.get('_route') == 'app_register' %}bg-light-blue{% endif %}">

        <!-- Error Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message|raw }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        <!-- Error Messages #END -->

        {# Content-Load #}
        {% block body %}

        {% endblock %}
        {# Content-Load END #}

    </main>
</div><!-- .container-fluid end -->

<!-- Footer Container -->
<footer id="footer">
    {% include('footer.html.twig') %}
</footer>
<!-- Footer Container #END -->


<!-- Javascript Bottom -->
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

<!-- Google Analytics -->
{{ include('boxes/_google_analytics.html.twig') }}

</body>
</html>
