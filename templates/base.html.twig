<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="noindex, nofollow">

    <meta name="description"
          content="{% block description %}Welcome!{% endblock %}">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {# todo IMPORTENT remove in production no index #}
    <meta name="robots" content="noindex"/>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Oswald|Roboto+Condensed:300&display=swap" rel="stylesheet">
    <!-- Fontawesome Icons -->

    {#<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/ico">#}

    <link rel="stylesheet" type="text/css" href="../../magicslideshow/magicslideshow.css"/>
    <script src="../../magicslideshow/magicslideshow.js" type="text/javascript"></script>

    <!-- Dynamic Style -->
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
        {{ encore_entry_link_tags('irs') }}
    {% endblock %}

</head>
<body id="body">
<div class="container-fluid">


    <div class="bg-dark p-1" id="header-banner">
        <div class="row">
            <div class="col-md-6">
                <div class="text-left text-white pl-2 d-none d-md-block">
                    <i class="fas fa-envelope"></i>
                    info@altmuehlsee.com
                </div>
            </div>
            <div class="col-md-6">
                <div class="text-right text-white pr-2">
                    Zum Portal f√ºr Ihren Urlaub am <a href="https://brombachsee.de/" class="text-white">Brombachsee</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Header with Navigation -->
    <header class="header">
        {% include('navigation.html.twig') %}
    </header>
    <!-- Header with Navigation #END -->

    <!-- Main Content -->
    <main id="main">
        <!-- Error Messages -->
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        <!-- Error Messages #END -->

        {% block body %}

        {% endblock %}
    </main>


    <!-- Ads -->
    {#  {% if app.request.get('_route') == 'index' or app.request.get('_route') == 'gastgeber' %}
          #}{# only show search on index and gastgeber page #}{#
          <div class="col-md-3">
              <aside id="ads">
                  {{ include('advertising.html.twig') }}
                  {{ include('wetter.html.twig') }}
              </aside>
          </div>
      {% endif %}#}
    <!-- Ads #END -->

</div>

{% if app.request.get('_route') == 'index' %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            {{ content }}

        </div>
        <div class="col-md-6">
            {{ include('boxes/_openweather_widget.twig') }}
        </div>
    </div>
</div>
{% endif %}

<!-- Footer -->
<footer id="footer">
    {% include('footer.html.twig') %}
</footer>
<!-- Footer #END -->


<!-- JAVASCRIPT -->
<!-- .js at the end -->
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
